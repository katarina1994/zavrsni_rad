<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZAVRSNI</title>

    <link href="~/Content/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href="~/Content/my_css.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
    <script src="https://code.angularjs.org/1.3.15/angular.min.js"></script>
    <script src="https://code.angularjs.org/1.3.15/angular-route.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.1/angular-cookies.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3&sensor=false"></script> 
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.4.0/ui-bootstrap-tpls.min.js"></script>

    


</head>
<body ng-app="web" ng-controller="mainController">

    <div class="header">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="navbar-left">
                <ul class="nav navbar-nav">
                    <li><a id="nasl" ng-href="#/index" ng-click="a=0">NASLOVNICA</a></li>
                    <li><a ng-href="#/admin" ng-show="authentication.ovlastID == 1">Admin</a></li>
                    <li><a ng-href="#/profile" ng-show="authentication.ovlastID == 2">Profil</a></li>
                    <li><a ng-href="#/voditelj" ng-show="authentication.ovlastID == 3">Voditelj</a></li>
                </ul>
            </div>
            
            <form class="navbar-form navbar-right">
                <div id="login" ng-hide="authentication.isAuth">

                    <div class="form-group">
                        <a class="btn regButton" role="button" href="/#register" ng-hide="authentication.isAuth"> Registracija </a>
                        <input ng-model="loginData.userName" type="text" class="form-control" placeholder="Korisničko ime">
                        <input ng-model="loginData.password" type="password" class="form-control" placeholder="Lozinka">
                        
                    </div>
                    <button class="btn btn-default" ng-click="login()"><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Prijava</button>

                </div>
                <div id="user_info" ng-hide="!authentication.isAuth">
                    <span class="korisnik user-welcome">Trenutno ste prijavljeni kao  <b>{{ authentication.userName }}</b></span>
                    <button class="btn btn-default" ng-click="logout()"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Odjava</button>
                </div>

            </form>

            
        </nav>
        
        
    </div>

    <div id="background" class="container">
        <div ng-view></div>
        
    </div>


    <script src="~/Scripts/jquery-2.2.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/angular-local-storage.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    

    <script src="~/App/app.js"></script>
    <script src="~/App/controllers/mainController.js"></script>
    <script src="~/App/controllers/indexController.js"></script>
    <script src="~/App/controllers/profileController.js"></script>
    <script src="~/App/controllers/registerController.js"></script>
    <script src="~/App/controllers/adminController.js"></script>
    <script src="~/App/controllers/voditeljController.js"></script>
    <script src="~/App/controllers/restoranController.js"></script>
    <script src="~/App/services/authService.js"></script>
    <script src="~/App/services/authInterceptorService.js"></script>
    <script src="~/App/services/restoraniService.js"></script>
    <script src="~/App/services/jelaService.js"></script>
    <script src="~/App/services/jela1Service.js"></script>

    <script>

    </script>
</body>
</html>